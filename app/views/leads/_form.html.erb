  <div class="field detail small">
    <%= f.label :applied %><br>
    <%= f.check_box :applied %>
  </div>
  <div class="field detail small">
    <%= f.label :pending %><br>
    <%= f.check_box :pending %>
  </div>

  <div class="field detail small">
    <%= f.label :internship %><br>
    <%= f.check_box :internship %>
  </div>
  <div class="field detail small">
    <%= f.label :offer %><br>
    <%= f.check_box :offer %>
  </div>
  <div class="field detail small">
    <%= f.label :wage %><br>
    <%= f.number_field :wage %>
  </div>
