<%= form_for(@lead) do |f| %>
  <% if @lead.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
      <% @lead.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="company_info">
  <div class="field">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name %>
  </div>
  <div class="field location">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field location">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field location">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="clear"></div>
  <div class="field">
    <%= f.label :position_title %><br>
    <%= f.text_field :position_title %>
  </div>
</div>
<div class="finer_details">
  <div>
    <%= collection_check_boxes(:lead, :language_ids, Language.all, :id, :name) %>
  </div>
  <div class="field contact">
    <%= f.label :apply_via %><br>
    <%= f.text_field :apply_via %>
  </div>
  <div class="field contact">
    <%= f.label :contact_person %><br>
    <%= f.text_field :contact_person %>
  </div>
  <div class="field contact">
    <%= f.label :contact_email %><br>
    <%= f.text_field :contact_email %>
  </div>
<div class="clear"></div>
  <div class="field detail">
    <%= f.label :deadline %><br>
    <%= f.text_field :deadline %>
  </div>
  <div class="field detail">
    <%= f.label :found_by %><br>
    <%= f.text_field :found_by %>
  </div>
